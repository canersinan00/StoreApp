@model OrderModel
@using StoreApp.Web.Models
@using StoreApp.Web.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, StoreApp.Web

<h1>Checkout</h1>
<hr>
<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3">Order Details</h4>
        <form asp-action="Checkout" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" class="form-control">
            </div>
            <div class="row">
                <div class="col">
                    <label asp-for="@Model.City"></label>
                <input asp-for="@Model.City" class="form-control">
                </div>
                <div class="col">
                    <label asp-for="@Model.Phone"></label>
                <input asp-for="@Model.Phone" class="form-control">
                </div>
                <div class="col">
                    <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" class="form-control">
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.AdressLine"></label>
                <textarea asp-for="@Model.AdressLine" class="form-control"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">submit</button>
        </form>
    </div>
    <div class="col-md-4">
        <h4 class="mb-3">Order Sumamry</h4>
        <ul class="list-group mb-3">
            @foreach(var item in Model.Cart.Items)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6>@item.Product.Name X @item.Quantity</h6> 
                    </div>
                    <span>@item.Product.Price.ToString("c")</span>
                </li>
            }
            <li class="list-group-item d-flex justify-content-between">
                    <span>Total : </span>
                    <strong>@Model.Cart.CalculateTotal().ToString("c")</strong>
                </li>
        </ul>
    </div>
</div>